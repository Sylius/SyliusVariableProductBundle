<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
>

    <entity name="Sylius\Bundle\VariableProductBundle\Model\OptionValue" table="sylius_option_value">

        <id name = "id" column = "id" type = "integer">
            <generator strategy = "AUTO" />
        </id>

        <field name="value" column="value" type="string" />

        <one-to-many field="dependencies" target-entity="Sylius\Bundle\VariableProductBundle\Model\DependencyInterface" mapped-by="optionValue"/>

        <one-to-many field="conflictedValues" target-entity="Sylius\Bundle\VariableProductBundle\Model\ConflictInterface" mapped-by="source"/>

        <one-to-many field="conflictValues" target-entity="Sylius\Bundle\VariableProductBundle\Model\ConflictInterface" mapped-by="target"/>

        <many-to-one field="option" target-entity="Sylius\Bundle\VariableProductBundle\Model\OptionInterface" inversed-by="values">
            <join-column name="option_id" referenced-column-name="id" nullable="false" />
        </many-to-one>

    </entity>

</doctrine-mapping>
